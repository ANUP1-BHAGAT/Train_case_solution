@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Remove if you're not using layout
}

<h2>Welcome, Admin @Session["AdminName"]!</h2>

<div class="text-center">
    <a href=@Url.Action("AddData","Admin") class="btn btn-primary">Add Train details</a>
    <a href=@Url.Action("ViewTrainData","Admin") class="btn btn-primary">View Train details</a>
    <a href=@Url.Action("DeleteData","Admin") class="btn btn-primary">Delete Train details</a>
    <a href=@Url.Action("ShowApprovedReservations","Admin") class="btn btn-primary">View Approved Reservations</a>
    <a href=@Url.Action("PendingReservations","Admin") class="btn btn-primary">View Pending Resevations</a>
    <a href=@Url.Action("ApproveReservation","Admin") class="btn btn-primary">Approve Pending Reservations</a>
</div>

@Html.ActionLink("Logout", "Logout", "Login", null, new { @class = "btn btn-danger" })
